  FireDAC.Phys.SQLiteWrapper.Stat;

type
  TFormMain = class(TForm)
    btnCadastro: TButton;
    btnLimpar: TButton;
    btnFechar: TButton;
    editProblemas: TEdit;
    labelProblema: TLabel;
